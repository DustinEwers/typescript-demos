@{
    ViewBag.Title = "Ninja's Quest";
}

<div class="jumbotron">
    <h1>Ninja's Quest</h1>
    <p class="lead">A very simple web based text game, kinda like Kingdom of Loathing.<br /> Except with ninjas, because who doesn't love ninjas?</p>
    <br />
    <button id="startNewGame" type="button" class="btn btn-default">Start Playing!</button>
</div>
<div class="row">
    <div class="col-md-8">
        <div id="characterCreation" style="display:none">
            <h3>Make a Ninja:</h3>
            <form id="charCreation">
                <div class="form-group">
                    <label for="characterName">Name</label>
                    <input type="text" class="form-control" id="characterName" placeholder="Eg. Bob, Sally">
                </div>
                <div class="form-group">
                    <label for="characterWeapon">Weapon</label>
                    <select id="characterWeapon" class="form-control">
                        <option value=""></option>
                        <option value="sword">Sword</option>
                        <option value="ninja-star">Ninja Stars</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-default">Submit</button>
            </form>
        </div>
        <div id="homeBase" style="display:none">
            <h3>Home Base</h3>
            <p>
                Your home base is a sweet ninja lair, filled with all the best stuff. Also, excellent wi-fi.
            </p>
            <div class="alert alert-info" role="alert">
                <p id="homeBaseDescription">

                </p>
            </div>
            <br />
            <button id="homeBaseRest" type="button" class="btn btn-default">Take a Nap</button>
            <button id="homeBaseFight" type="button" class="btn btn-default">Fight a Monster</button>
        </div>
        <div id="monsterFight" style="display:none">
            <h3>Fight!</h3>
            <div class="alert alert-warning" role="alert">
                <p id="monsterAction">

                </p>
            </div>
            <p>
                <span class="control-label">Current Bad Guy: </span>
                <span id="monsterName"></span>
            </p>
            <p>
                <span class="control-label">Remaining Health: </span>
                <span id="monsterHealth"></span>
            </p>
            <button id="monsterContinueFight" type="button" class="btn btn-default">Attack</button>
            <button id="monsterRunAway" type="button" class="btn btn-default">Run Away</button>
        </div>
    </div>
    <div id="heroStats" class="col-md-4" style="display:none">
        <h3>Hero Stats</h3>
        <p>
            <span class="control-label">Name: </span>
            <span id="name"></span>
        </p>
        <p>
            <span class="control-label">Weapon: </span>
            <em><span id="weapon"></span></em>
            <br />
            <span id="weaponDescription"></span>
        </p>
        <p>
            <span class="control-label">Health: </span>
            <span id="health"></span>
        </p>
        <p>
            <span class="control-label">Monsters killed: </span>
            <span id="monstersKilled"></span>
        </p>
        <p>
            <span class="control-label">Cash Money: </span>
            <span id="money"></span>
        </p>
    </div>
</div>

@section scripts{
    @Scripts.Render("~/bundles/game")
}